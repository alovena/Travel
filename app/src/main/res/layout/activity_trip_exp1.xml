<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.TripExp1Activity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorWhite"
        android:theme="@style/AppTheme.NoActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <android.support.v4.view.ViewPager
        android:id="@+id/Exp1Iamge"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="10pt"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:background="@drawable/roundcorner"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Exp1PhoneNum"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:drawablePadding="10.7dp"
                android:gravity="center"
                android:text="전화걸기"
                android:textColor="@color/colorWhite"
                android:textSize="14dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:textColor="@color/colorBlack"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10pt"
            android:layout_marginRight="10pt"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="wrap_content"
            android:background="@drawable/roundcorner"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Exp1Loc"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"

                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:drawableLeft="@drawable/ic_map_black_24dp"
                android:drawablePadding="10.7dp"
                android:gravity="center"
                android:text="위치보기"
                android:textColor="@color/colorWhite"
                android:textSize="14dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"

                android:textColor="@color/colorBlack"
                android:textSize="14dp" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="여행설명"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Exp1Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="여행설명"
            android:textSize="12dp"
            android:textStyle="bold"
            android:scrollbars="vertical"/>
    </LinearLayout>

</LinearLayout>

